/**
 * Definition for singly-linked list.
 * struct ListNode {
 *     int val;
 *     ListNode *next;
 *     ListNode(int x) : val(x), next(NULL) {}
 * };
 */
class Solution {
public:
    bool hasCycle(ListNode *head) {
        if(head==NULL) return 0;
        ListNode *p,*s=head;
        ListNode* mark=new ListNode();
        while(s!=NULL){
            p=s;
            s=s->next;
            if(s==mark) return 1;
            p->next=mark;
        }
        return 0;
    }
};
